<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="15dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="上一流程："
        android:id="@+id/label_proc_name"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="流程"
        android:id="@+id/txt_proc_name"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/label_proc_name"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="\@"
        android:id="@+id/label_proc_user"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/txt_proc_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="张三"
        android:id="@+id/txt_proc_user"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/label_proc_user" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="状态："
        android:id="@+id/label_proc_status"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/txt_proc_status" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="正常"
        android:id="@+id/txt_proc_status"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="错误内容："
        android:id="@+id/label_proc_error"
        android:layout_below="@+id/label_proc_name"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:visibility="gone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_proc_error"
        android:layout_alignTop="@+id/label_proc_error"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/label_proc_error"
        android:visibility="gone" />

</RelativeLayout>