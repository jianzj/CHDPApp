<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="15dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="青浦中医院"
        android:id="@+id/txt_order_hospital"
        android:textStyle="bold"
        android:textSize="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20000101020202123"
        android:id="@+id/txt_order_uuid"
        android:layout_marginLeft="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="出库单时间"
        android:layout_alignTop="@+id/txt_order_hospital"
        android:layout_toStartOf="@+id/txt_order_hospital"
        android:layout_marginEnd="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0000-00-00 00:00:00.0"
        android:id="@+id/txt_order_time"
        android:layout_below="@+id/txt_order_uuid"
        android:layout_alignEnd="@+id/txt_order_uuid" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="20袋"
        android:id="@+id/txt_order_num"
        android:layout_alignBottom="@+id/txt_order_name"
        android:layout_toEndOf="@+id/txt_order_name"
        android:layout_marginLeft="10dp" />

</RelativeLayout>